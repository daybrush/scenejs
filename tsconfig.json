{
	"compilerOptions": {
	  "outDir": "./dist/",
	  "esModuleInterop": false,
		"sourceMap": true,
	  "noImplicitAny": true,
	  "module": "es2015",
		"target": "es5",
		"declaration": true,
		"declarationDir": "./declaration",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"lib": ["es2015", "dom"],
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
  }