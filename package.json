{
  "name": "scenejs",
  "version": "1.0.0-rc",
  "description": "Javascript Animation Library",
  "main": "dist/scene.common.js",
  "module": "dist/scene.esm.js",
  "sideEffects": false,
  "types": "declaration/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "coverage": "karma start --coverage && print-coveralls --sort=desc",
    "test": "karma start",
    "webpack": "webpack",
    "start": "rollup -c -w",
    "test:chrome": "karma start --chrome",
    "build": "npm run build:rollup && npm run declaration",
    "declaration": "rm -rf declaration && tsc -p tsconfig.declaration.json",
    "tsc": "tsc -p tsconfig.json",
    "build:rollup": "rollup -c && print-sizes ./dist",
    "deploy": "gh-pages -d ./demo --dest=./ --add --remote local",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "doc": "rm -rf ./doc && jsdoc -c jsdoc.json",
    "demo:start": "demo demo.js -w",
    "demo:build": "rm -rf ./demo/dist && demo demo.js",
    "release": "npm run build && npm run release:build && npm run deploy",
    "release:build": "npm run release:mkdir && npm run doc && npm run release:version && npm run release:latest",
    "release:mkdir": "mkdir -p ./demo/release && rm -rf ./demo/release/$npm_package_version && rm -rf ./demo/release/latest && mkdir -p ./demo/release/$npm_package_version && mkdir -p ./demo/release/latest",
    "release:version": "cp -a ./dist/. ./demo/release/$npm_package_version/dist && cp -a ./doc/. ./demo/release/$npm_package_version/doc && cp -a ./example/. ./demo/release/$npm_package_version/example",
    "release:latest": "cp -a ./dist/. ./demo/release/latest/dist && cp -a ./doc/. ./demo/release/latest/doc && cp -a ./example/. ./demo/release/latest/example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daybrush/scenejs.git"
  },
  "keywords": [
    "scene",
    "scenejs",
    "animate",
    "animation",
    "css",
    "requestAnimationFrame",
    "motion"
  ],
  "author": "Daybrush",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daybrush/scenejs/issues"
  },
  "homepage": "https://daybrush.com",
  "devDependencies": {
    "@daybrush/demo": "0.0.2",
    "@daybrush/jsdoc": "^0.3.5",
    "@daybrush/page": "^0.2.0",
    "@egjs/flicking": "^2.4.3",
    "@types/karma-chai": "^0.1.1",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^7.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-no-side-effect-class-properties": "0.0.6",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "daybrush-jsdoc-template": "^1.5.0",
    "eslint": "^4.15.0",
    "eslint-config-naver": "^2.0.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "gh-pages": "^1.1.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-typescript": "^3.0.13",
    "mocha": "^4.0.1",
    "print-coveralls": "^1.2.2",
    "print-sizes": "0.0.3",
    "rollup": "^1.4.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-prototype-minify": "^1.0.4",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-plugin-visualizer": "^0.9.2",
    "shape-svg": "^0.3.1",
    "sinon": "^4.1.2",
    "tslint": "^5.11.0",
    "typescript": "^2.8.4",
    "typescript-compiler": "^1.4.1-2"
  },
  "dependencies": {
    "@daybrush/utils": "^0.7.0-rc"
  }
}
