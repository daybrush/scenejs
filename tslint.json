{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"jsdoc-format": false,
		"forin": false,
		"no-console": false,
		"no-any": false,
		"interface-name": false,
		"indent": [
			true,
			"spaces",
			4
		],
		"ordered-imports": false,
		"object-literal-sort-keys": false,
		"no-unused-expression": false,
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"max-line-length": [
			true,
			{
				"limit": 120,
				"ignore-pattern": "(\\* @)|//"
			}
		],
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "always",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		]
	}
}